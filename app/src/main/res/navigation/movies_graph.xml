<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movies_graph"
    app:startDestination="@id/movies_list">

    <fragment
        android:id="@+id/movies_list"
        android:name="com.example.tools.features.movies.list.MovieListFragment"
        tools:layout="@layout/fragment_movie_list"
        >
        <action
            android:id="@+id/nav_list_to_update"
            app:destination="@id/movies_update"
            app:popUpTo="@id/movies_list"
            />
        <action
            android:id="@+id/nav_list_to_create"
            app:destination="@id/movies_create"
            app:popUpTo="@id/movies_list"
            />
        <action
            android:id="@+id/nav_list_to_delete"
            app:destination="@id/movies_delete"
            app:popUpTo="@id/movies_list"
            />
    </fragment>
    <fragment
        android:id="@+id/movies_update"
        android:name="com.example.tools.features.movies.update.MovieUpdateFragment"
        tools:layout="@layout/fragment_movie_update"
        />

    <fragment
        android:id="@+id/movies_create"
        android:name="com.example.tools.features.movies.create.MovieCreateFragment"
        tools:layout="@layout/fragment_movie_create"
        />

    <fragment
        android:id="@+id/movies_delete"
        android:name="com.example.tools.features.movies.delete.MovieDeleteFragment"

        />

</navigation>